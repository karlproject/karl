<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal">
  <head>
    <title>Post Office Quarantine</title>
  </head>
  <body>
    <h1>Post Office Quarantine</h1>
    <table border="1">
      <thead>
        <tr>
          <td>&nbsp;</td>
          <td>Message-Id</td>
          <td>Error Message</td>
        </tr>
      </thead>
      <tbody>
        <form method="POST">
          <input type="submit" name="requeue_all"
                 value="Requeue All"/>
          <input type="submit" name="delete_all"
                 value="Delete All"/>
        </form>
        <tr tal:repeat="m messages">
          <td>
            <form method="POST">
              <input type="submit" name="requeue_${m['po_id']}"
                     value="Requeue"/>
              <input
                     type="submit" name="delete_${m['po_id']}"
                     value="Delete"/>
            </form>
          </td>
          <td>
            <a href="${m['url']}">${m['message_id']}</a>
          </td>
          <td>
            ${m['error']}
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>
