<html xmlns="http://www.w3.org/1999/xhtml" 
     xmlns:tal="http://xml.zope.org/namespaces/tal"
     xmlns:metal="http://xml.zope.org/namespaces/metal"
     metal:use-macro="api.community_layout">
<head>
 <metal:block metal:fill-slot="extra-headers">
  <link rel="stylesheet" type="text/css"
        href="$(api.app_url}/deform/css/form.css"/>
  <script type="text/javascript"
          src="$(api.app_url}/deform/scripts/jquery-1.4.2.min.js" />
  <script type="text/javascript"
          src="$(api.app_url}/deform/scripts/deform.js" />
 </metal:block>
</head>
<body>

  <div metal:fill-slot="content">

    <div metal:use-macro="api.snippets.macros['status_message']"/>
    <div metal:use-macro="api.snippets.macros['error_message']"/>
    <div metal:use-macro="api.snippets.macros['actions_box']"/>
    <h1>${api.page_title}</h1>
    <p tal:content="page_description|''"/>
    <div tal:content="structure form" tal:omit-tag=""/>
    
  </div>

  <script type="text/javascript">
   deform.load()
  </script>
  
</body>
</html>
