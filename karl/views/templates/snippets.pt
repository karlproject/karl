      <link rel="icon" href="${api.static_url}/images/favicon.ico" type="image/vnd.microsoft.icon"/>
      <span tal:define="karl_client_data karl_client_data|''" tal:replace="structure api.render_karl_client_data(karl_client_data)"/>
