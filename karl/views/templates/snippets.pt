      <link rel="stylesheet" href="${api.static_url}/bottlecap-wire/livesearch.css" type="text/css"/>
      <link rel="stylesheet" href="${api.static_url}/jquery-ui/jquery.ui.selectmenu.css" type="text/css"/>
