    <metal:misc_headers define-macro="misc_headers">
      <meta id="karl-app-url" content="${api.app_url}"/>
      <meta id="karl-here-url" content="${api.here_url}"/>
      <meta id="karl-static-url" content="${api.static_url}"/>
