<div class="searchbox-pushdown-panel">
    <div class="pushdownContent clearfix sb-uxpanel">
        <span class="form-inline span8 offset2">
            <label class="checkbox">
                Search in:
                <select name="sb_scope" class="span2">
                    {{#scopeOptions}}
                    <option value="{{path}}" {{#selected}}selected{{/selected}}>{{label}}</option>
                    {{/scopeOptions}}
                </select>
            </label>
            <label class="checkbox">
                <input name="sb_staff_only" 
                       type="checkbox"
                       {{#staffOnly}}checked{{/staffOnly}}>
                Staff only content
            </label>
            <label class="checkbox">
                <input name="sb_past_year" 
                    type="checkbox" {{#pastYear}}checked{{/pastYear}}>
                Modified in past year
            </label>
        </span>
        <a class="sb-close">CLOSE</a>
    </div>
    {{#error}}
    <div class="pushdownContent clearfix sb-error">
        {{error}}
    </div>
    {{/error}}
    {{#results}}
    <div class="pushdownContent clearfix row sb-results {{#progress}}sb-disabled{{/progress}}">
        {{#columns}}
        <div class="span4">
            {{#groups}}
            <div class="sb-group">
                <div class="sb-group-header">
                    <span>{{label}}</span>
                    <span class="pull-right">
                        <a href="#">show more</a>
                        <a href="#">full search</a>
                    </span>
                </div>
                {{#items}}
                {{#profile}}   {{! TODO }}
                <a class="sb-item sb-profile-item" href="{{url}}">
                    <img class="sb-icon" src="{{thumbnail}}">
                    <span class="sb-labels">
                        <span class="sb-item-1">TODO {{title}}</span>
                        <span class="sb-item-2">by {{modified_by}}, {{modified_ago}}</span>
                    </span>
                </a>
                {{/profile}}
                {{#page}}
                <a class="sb-item sb-page-item" href="{{url}}">
                    <span class="sb-item-1">{{title}}</span>
                    <span class="sb-item-2">by {{modified_by}}, {{modified_ago}} in {{community}}</span>
                </a>
                {{/page}}
                {{#reference}}
                <a class="sb-item sb-reference-item" href="{{url}}">
                    <span class="sb-item-1">{{title}}</span>
                    <span class="sb-item-2">by {{modified_by}}, {{modified_ago}} in {{community}}</span>
                </a>
                {{/reference}}
                {{#blogentry}}
                <a class="sb-item sb-blogentry-item" href="{{url}}">
                    <span class="sb-item-1">{{title}}</span>
                    <span class="sb-item-2">by {{modified_by}}, {{modified_ago}} in {{community}}</span>
                </a>
                {{/blogentry}}
                {{#forum}}   {{! TODO }}
                <a class="sb-item sb-forum-item" href="{{url}}">
                    <span class="sb-item-1">TODO {{title}}</span>
                    <span class="sb-item-2">by {{modified_by}}, {{modified_ago}}</span>
                </a>
                {{/forum}}
                {{#forumtopic}}   {{! TODO }}
                <a class="sb-item sb-forumtopic-item" href="{{url}}">
                    <span class="sb-item-1">TODO {{title}}</span>
                    <span class="sb-item-2">by {{modified_by}}, {{modified_ago}}</span>
                </a>
                {{/forumtopic}}
                {{#comment}}   {{! TODO }}
                <a class="sb-item sb-comment-item" href="{{url}}">
                    <span class="sb-item-1">TODO {{title}}</span>
                    <span class="sb-item-2">by {{modified_by}}, {{modified_ago}}</span>
                </a>
                {{/comment}}
                {{#file}}
                <a class="sb-item sb-file-item" href="{{url}}">
                    <img class="sb-icon" src="{{icon}}">
                    <span class="sb-labels">
                        <span class="sb-item-1">TODO {{title}}</span>
                        <span class="sb-item-2">by {{modified_by}}, {{modified_ago}} in {{community}}</span>
                    </span>
                </a>
                {{/file}}
                {{#calendarevent}}
                <a class="sb-item sb-calendarevent-item" href="{{url}}">
                    <span class="sb-item-1">{{title}}{{#location}} - at {{/location}}{{location}}</span>
                    <span class="sb-item-2">{{start_fmt}} -> {{end_fmt}} in {{community}}</span>
                </a>
                {{/calendarevent}}
                {{#community}}
                <a class="sb-item sb-community-item" href="{{url}}">
                    <span class="sb-item-1">{{title}}</span>
                    <span class="sb-item-2">{{num_members}} member{{num_members_plural}}</span>
                </a>
                {{/community}}
                {{#office}}   {{! TODO }}
                <a class="sb-item sb-office-item" href="{{url}}">
                    <span class="sb-item-1">TODO {{title}}</span>
                    <span class="sb-item-2">by {{modified_by}}, {{modified_ago}}</span>
                </a>
                {{/office}}
                {{/items}}
            </div>
            {{/groups}}
            {{^groups}}
            <div class="sb-group-header sb-notfound">
                No results found.
            </div>
            {{/groups}}
        </div>
        {{/columns}}
    </div>
    {{/results}}
</div>
